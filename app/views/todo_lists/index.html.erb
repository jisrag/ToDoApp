
<div class="container">
<div class="row">
<div class="col-md-12" align="center">

  <h1>Tus listas</h1>


<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.title %></td>
        <td><%= todo_list.description %></td>
      </tr>
      <% if user_signed_in? %>
      <tr>
        <td><%= link_to 'Mostrar', todo_list %></td>
        <td><%= link_to 'Editar', edit_todo_list_path(todo_list) %></td>
        <td><%= link_to 'Eliminar', todo_list, method: :delete, data: { confirm: 'Estas seguro de borrar esta listaaaaa??????' } %></td>
      </tr>
      <%  end %>
       
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
    <%= link_to 'Nueva Lista', new_todo_list_path %>
    <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete %>
    <%= link_to "Editar perfil", edit_user_registration_path %>
<% else %>
    <%= link_to "Iniciar sesion", new_user_session_path %>
    <%= link_to "Crear cuenta", new_user_registration_path %>
<% end %>


</div>
</div>
</div>
