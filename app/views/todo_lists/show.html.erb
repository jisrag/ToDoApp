<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Titulo:</strong>
  <%= @todo_list.title %>
</p>

<p>
  <strong>Descripcion:</strong>
  <%= @todo_list.description %>
</p>

<div id="todo_items_wrapper">
 <%= render @todo_list.todo_items %>
 <div id="form">
  <%= render "todo_items/form" %>
 </div>
