<div class="container">
<div class="row">
<div class="col-md-12" align="center">

<p id="notice"><%= notice %></p>

<p>
  <strong>Titulo:</strong>
  <%= @todo_list.title %>
</p>

<p>
  <strong>Descripcion:</strong>
  <%= @todo_list.description %>
</p>

<div id="todo_items_wrapper">
 <%= render @todo_list.todo_items %>
 <div id="form">
  <%= render "todo_items/form" %>
 </div>
</div>


<%= link_to 'Editar', edit_todo_list_path(@todo_list) %> |
<%= link_to 'Regresar', todo_listas_path %>|
<%= link_to 'Eliminar', todo_list_path(@todo_list), method: :delete, data: { confirm: "Estas seguro de eliminar esta lista?" } %> |
<p>
  Download:
  <%= link_to "CSV", todo_list_path(@todo_list ,format: "csv") %> 
</p>

</div>
</div>
</div>